<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <ImageView
                android:id="@+id/iv_dynamic_head_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/tv_dynamic_nick_name"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="哈哈(老师)"/>

            <TextView
                android:id="@+id/tv_dynamic_create_time"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="2014-11-11"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dynamic_content"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            tools:text="发几个落地生根就爱看老弟叫改了的萨克管克拉打暑假工啦估计拉多少级了蓝思科技"/>

        <FrameLayout
            android:id="@+id/fl_dynamic_video"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_video_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_outline_18dp"/>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_dynamic_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_share"
                style="@style/ImageViewSelect"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dynamic_tools_margin"
                app:srcCompat="@drawable/ic_share_normal_24dp"/>

            <ImageView
                android:id="@+id/iv_reply"
                style="@style/ImageViewSelect"
                android:layout_marginRight="@dimen/dynamic_tools_margin"
                android:layout_toLeftOf="@+id/iv_share"
                android:src="@drawable/ic_reply_normal_24dp"/>

            <ImageView
                android:id="@+id/iv_liked"
                style="@style/ImageViewSelect"
                android:layout_marginRight="@dimen/dynamic_tools_margin"
                android:layout_toLeftOf="@+id/iv_reply"
                android:clickable="true"
                app:srcCompat="@drawable/selector_favorite"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_favorite_list_18dp"/>

            <TextView
                android:id="@+id/tv_liked"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,哈哈哈,"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</android.support.v7.widget.CardView>