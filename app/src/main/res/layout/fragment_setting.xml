<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kindergartens.android.kindergartens.core.modular.setting.SettingActivityFragment"
    tools:showIn="@layout/activity_setting">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/line"
        app:showDividers="middle|end">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bt_account_safe"
            style="@style/default_text_subhead"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="账号安全"
            android:textColor="@color/secondary_text"
            />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bt_about_me"
            style="@style/default_text_subhead"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="关于我们"
            android:textColor="@color/secondary_text"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bt_update"
            style="@style/default_text_subhead"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="版本更新"
            android:textColor="@color/secondary_text"
            />
    </android.support.v7.widget.LinearLayoutCompat>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_login_out"
            style="@style/Widget.AppCompat.ActionButton.CloseMode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/primary"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            />
    </FrameLayout>
</LinearLayout>
